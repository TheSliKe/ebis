<Window x:Class="Ebis.InfoBornePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ebis"
        mc:Ignorable="d"
        Title="InfoBornePopup" Height="450" Width="800">
    <Grid>
        <Label Content="Date de mise en service : " HorizontalAlignment="Left" Margin="60,45,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="miseEnService" HorizontalAlignment="Left" Margin="209,47,0,0" VerticalAlignment="Top"/>

        <Label Content="Date de derniere révision : " HorizontalAlignment="Left" Margin="60,76,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="derniereRevision" HorizontalAlignment="Left" Margin="209,78,0,0" VerticalAlignment="Top"/>

        <Label Content="Adresse :" HorizontalAlignment="Left" Margin="60,120,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="adresse" HorizontalAlignment="Left" Margin="123,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Ville :" HorizontalAlignment="Left" Margin="60,146,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ville" HorizontalAlignment="Left" Margin="103,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Code Postal :" HorizontalAlignment="Left" Margin="60,172,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="codePostal" HorizontalAlignment="Left" Margin="143,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        <DataGrid Name="dgTypeCharge" AutoGenerateColumns="False" Margin="500,84,126,233">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Libelle" Binding="{Binding Libelle}" />
                <DataGridTextColumn Header="Puissance" Binding="{Binding Puissance}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
