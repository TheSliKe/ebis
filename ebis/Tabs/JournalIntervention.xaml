<UserControl x:Class="Ebis.Tabs.JournalIntervention"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ebis.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,0,0,4">
            <TextBlock Text="Recherche:" Height="20" TextWrapping="Wrap" RenderTransformOrigin="0.19,0.52" Width="309"/>
            <TextBox x:Name="InterventionRecherche" TextWrapping="Wrap" Width="310" TextChanged="InterventionRecherche_TextChanged"/>
            <DataGrid x:Name="InterventionDataGrid" Height="404" Grid.ColumnSpan="2" Width="496">
            </DataGrid>
        </StackPanel>
            </Grid>
    
</UserControl>
