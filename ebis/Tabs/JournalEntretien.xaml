<UserControl x:Class="Ebis.Tabs.JournalEntretien"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ebis.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,10,0,10">
            <TextBox x:Name="journalEntretienRecherche" TextWrapping="Wrap" Width="120" TextChanged="journalEntretienRecherche_TextChanged"/>
            <ListBox x:Name="journalEntretienList" MinHeight="100" SelectionChanged="journalEntretienList_SelectionChanged"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10,10,10,10">
            <TextBlock x:Name="journalEntretienNumeroBorne"/>
            <TextBlock x:Name="journalEntretienLocalisation"/>
            <TextBlock Text="Elements Vérifiés" TextWrapping="Wrap"/>
            <TextBlock Text="Elements remplacés" TextWrapping="Wrap"/>

        </StackPanel>
    </Grid>
</UserControl>
