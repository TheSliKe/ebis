<UserControl x:Class="Ebis.Tabs.JournalIncident"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ebis.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <StackPanel Margin="0,0,0,10">
        <Grid Height="30">
            <TextBlock Text="Recherche:" TextWrapping="Wrap" Margin="284,5,-284,-5" />
            <TextBox x:Name="journalIncidentRecherche" TextWrapping="Wrap" Width="540" TextChanged="JournalIncidentRecherche_TextChanged" Height="20"/>
        </Grid>
        <DataGrid x:Name="interventionDataGrid"  AutoGenerateColumns="False" MinHeight="100" Height="669" Margin="10,0,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date de l'incident" Binding="{Binding dateIncident}" />
                <DataGridTextColumn Header="Borne" Binding="{Binding borne}" />
                <DataGridTextColumn Header="Type d'incident" Binding="{Binding typeIncidents}" />
                <DataGridTextColumn Header="Détail de l'incident" Binding="{Binding detailsIncidents}" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
